{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Montelimar",
  "mainBinaryName": "montelimar",
  "version": "0.2.1",
  "identifier": "com.montelimar.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "homepage": "https://x.com/JulienBlanchon",
    "license": "Apache License 2.0",
    "longDescription": "Montelimar is an OCR tool that allows you screenshot and extract text from images",
    "shortDescription": "Montelimar is an OCR tool that allows you screenshot and extract text from images",
    "publisher": "Julien Blanchon",
    "createUpdaterArtifacts": true,
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/ocr_mlx"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZBRDQxRjc1RkM4MzM3N0MKUldSOE40UDhkUi9VYXRIYzNaVVY4SjJlOUY1U3NySzFrMXBPQTJRM3pyUHk0d2R6MklnYVN3dnUK",
      "endpoints": [
        "https://github.com/julien-blanchon/Montelimar/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "menubar",
        "label": "menubar",
        "url": "/menubar",
        "width": 500,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "devtools": true,
        "center": false,
        "focus": true,
        "zoomHotkeysEnabled": false
      },
      {
        "title": "spotlight",
        "label": "spotlight",
        "url": "/spotlight",
        "fullscreen": false,
        "height": 150,
        "width": 800,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "transparent": true,
        "devtools": true,
        "center": true,
        "focus": false,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost http://asset.localhost asset: data: blob:",
        "img-src": "'self' ipc: http://ipc.localhost http://asset.localhost asset:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "asset",
          "default-src",
          "img-src",
          "$APPDATA/**"
        ]
      }
    },
    "macOSPrivateApi": true
  }
}