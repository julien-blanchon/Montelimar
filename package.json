{
	"name": "menubar-screenshot-starter",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"db:generate": "drizzle-kit generate",
		"db:studio": "NODE_ENV=development drizzle-kit studio",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"pretauri": "sh -c 'if bun run python:package:check | grep -q BUILD_NEEDED; then (bun run python:package:build; bun run python:package:reset); fi'",
		"tauri": "tauri",
		"version": "bun --eval 'import packageJson from \"./package.json\"; console.log(packageJson.version);'",
		"python:package:build": "uvx --directory src-python --from box-packager box package && mkdir -p src-tauri/binaries && for file in src-python/target/release/*; do ext=${file##*.}; [ \"$file\" = \"$ext\" ] && ext=\"\" || ext=.$ext; dest=\"src-tauri/binaries/$(basename ${file%.*})-$(rustc -Vv | grep host | cut -f2 -d' ')$ext\"; cp -f \"$file\" \"$dest\"; chmod +x \"$dest\"; done",
		"python:package:reset": "src-tauri/binaries/* self restore",
		"python:package:check": "bun ./check_build_needed.mjs",
		"python:package:dev": "uv --directory src-python --project src-python run -m ocr_mlx.endpoint",
		"python:package:generate-openapi": "uv --directory src-python --project src-python run -m ocr_mlx.export_openapi",
		"python:package:generate-client": "openapi-ts -i openapi.json -o src/lib/python/client -c @hey-api/client-fetch",
		"icon:generate": "tauri icon src-tauri/icons/icon.svg",
		"icon:generate-tray": "bash ./generate_icon_animation.sh src-tauri/icons/tray.png src-tauri/icons/frames/ 8"
	},
	"license": "MIT",
	"devDependencies": {
		"@internationalized/date": "^3.5.6",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.7.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tauri-apps/cli": "^2.1.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/eslint": "^9.6.0",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"chokidar": "^4.0.3",
		"clsx": "^2.1.1",
		"daisyui": "^4.12.23",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"lucide-svelte": "^0.469.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-dnd-action": "^0.9.53",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.9",
		"tailwindcss-motion": "^1.0.0",
		"tslib": "^2.8.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.4.10",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"@hey-api/client-fetch": "^0.5.7",
		"@hey-api/openapi-ts": "^0.60.1",
		"@huggingface/hub": "^1.0.0",
		"@iconify/svelte": "^4.1.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tauri-apps/api": "^2.0.1",
		"@tauri-apps/plugin-autostart": "~2",
		"@tauri-apps/plugin-clipboard-manager": "^2.0.0",
		"@tauri-apps/plugin-dialog": "~2.0.0-rc",
		"@tauri-apps/plugin-fs": "~2",
		"@tauri-apps/plugin-global-shortcut": "~2",
		"@tauri-apps/plugin-http": "~2",
		"@tauri-apps/plugin-log": "~2",
		"@tauri-apps/plugin-notification": "~2",
		"@tauri-apps/plugin-os": "~2.0.0-rc",
		"@tauri-apps/plugin-process": "~2.0.0-rc",
		"@tauri-apps/plugin-shell": "~2.0.0-rc",
		"@tauri-apps/plugin-sql": "~2",
		"@tauri-apps/plugin-store": "~2",
		"better-sqlite3": "^11.7.0",
		"drizzle-orm": "^0.38.3",
		"tauri-plugin-svelte": "^0.1.3"
	}
}
